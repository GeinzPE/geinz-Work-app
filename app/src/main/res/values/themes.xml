<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GeinzWork" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="fondo">
        <item name="android:background">#F9F8FF</item>
    </style>

    <style name="RoundCustom_publicidad">
        <item name="android:background">@drawable/card_trabajos_black</item>
    </style>

    <style name="Theme.GeinzWork" parent="Base.Theme.GeinzWork" />

    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextoModoOScuroColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="descripcionColor">
        <item name="android:color">#757575</item>
    </style>

    <style name="VioletaColor">
        <item name="android:textColor">#80008C</item>
    </style>

    <style name="RoundTrabajadoresBG">
        <item name="android:background">@drawable/card_trabajos</item>
    </style>

    <style name="RoundItemCarrito">
        <item name="android:background">@drawable/round_item_selecionado</item>
    </style>

    <style name="circleColorBG">
        <item name="android:background">@drawable/circle_gris</item>
    </style>

    <style name="CustomTextAppearance">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="CustomTextLargo">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="backgroundProductosTienda">
        <item name="android:background">@drawable/bakground_white</item>
    </style>

    <style name="TextoTitulos">
        <item name="android:fontFamily">@font/uni_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RoundedDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/roun_zoom_img</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">1</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/RoundedButtonShape</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/violeta</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="RoundedButtonShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">9dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="ShapeAppearance.MaterialComponents.MediumComponents" parent="">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>


    <style name="custom_card_view" parent="">
        <item name="shapeAppearanceOverlay">@style/customShapeAppearance</item>
    </style>

    <style name="customShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="BottomCutShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">200dp</item>
        <item name="cornerSizeBottomLeft">200dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>


    <style name="Theme.ApiSclasScrenn" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/violetaQR</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/qr_geinz_sin_fondo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.GeinzWork</item>
    </style>

    <style name="RoundedButtonFiltradoHistorial" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/roundBtnFiltradoHistorial</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#666C6F</item>
        <item name="android:backgroundTint">#F6F4F2</item>
    </style>

    <style name="RoundedButtonFiltradoHistorialCLikado" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/roundBtnFiltradoHistorial</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#4A6978</item>
        <item name="android:backgroundTint">#C9EBF9</item>
    </style>

    <style name="roundBtnFiltradoHistorial" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4D3187</item>
    </style>



    <style name="RoundedImageViewStyle">
        <item name="shapeAppearanceOverlay">@style/RoundedImageViewCorners</item>
    </style>

    <style name="RoundedImageViewCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">120dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

</resources>