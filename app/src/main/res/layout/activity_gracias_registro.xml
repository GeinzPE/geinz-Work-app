<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fondo"
    tools:context=".GraciasRegistro">

    <TextView
        android:id="@+id/geinz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextoModoOScuroColor"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/la_bold_font"
        android:text="@string/geinz"
        android:textSize="50sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/crea_diseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geinz"
        android:layout_centerHorizontal="true"
        android:text="@string/crea_diseña"
        android:fontFamily="@font/la_bold_font"
        style="@style/TextoModoOScuroColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/corazon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/crea_diseña"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/corazon_gracias" />

    <LinearLayout
        android:id="@+id/contendorGracias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/corazon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextoModoOScuroColor"
            android:layout_marginTop="10dp"
            android:text="@string/gracias"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextoModoOScuroColor"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/bienvenido"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userNameCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/TextoModoOScuroColor"
            android:layout_marginTop="15dp"
            android:text="@string/userNameCuenta"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/continuarPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/next"
        android:textStyle="bold" />


</RelativeLayout>