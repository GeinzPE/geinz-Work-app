<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/cerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Filtrado de trabajadores"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/verificados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verificados"
                app:icon="@drawable/verificado_blanco_icon"
                app:iconGravity="textEnd"
                style="@style/RoundedButton"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todos"
                app:icon="@drawable/general_blanco_icon"
                app:iconGravity="textEnd"
                style="@style/RoundedButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/activos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activos"
                app:icon="@drawable/activos_blanco_icon"
                app:iconGravity="textEnd"
                style="@style/RoundedButton"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/masEstrellas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Estrellas"
                app:icon="@drawable/estrellas_icon_general"
                app:iconGravity="textEnd"
                style="@style/RoundedButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancelar"
            app:iconGravity="textEnd"
            style="@style/RoundedButton" />

    </LinearLayout>

</LinearLayout>