<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/cerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Registrate gratis en Geinz"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            style="@style/TextoTitulos"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/Cuenta_usuario"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounder_btn_vtrajador"
                    android:maxWidth="20dp"
                    android:maxHeight="20dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cuenta_usuario_icon"
                    android:text="Click Me" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuenta usuario"
                    android:layout_gravity="center"
                    style="@style/TextoModoOScuroColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageButton
                android:id="@+id/Cuenta_Trabajador"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rounder_btn_vtrajador"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cuenta_trabajador_icon"
                android:text="Click Me"
               />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuenta Trabajador"
                    android:layout_gravity="center"
                    style="@style/TextoModoOScuroColor"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>