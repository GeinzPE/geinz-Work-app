<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fondo"
    tools:context=".problemas_soporte_politicas.veneficios_verificados">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/verificationTitle"
                style="@style/TextoModoOScuroColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Beneficios de Trabajadores Verificados"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Confianza y Seguridad:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/benefit1"
                style="@style/descripcionColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Los trabajadores verificados han pasado por un riguroso proceso de verificación, garantizando que su información y datos personales son auténticos y confiables."
                android:textSize="14sp" />

            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Evaluación Detallada:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/benefit2"

                style="@style/descripcionColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Cada trabajador es evaluado exhaustivamente, asegurando que cumplen con los estándares de calidad y profesionalismo requeridos por Geinz."
                android:textSize="14sp" />

            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Experiencia y Profesionalismo:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/benefit3"

                style="@style/descripcionColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Los trabajadores verificados son seleccionados por su experiencia y habilidades, proporcionando un servicio de alta calidad en cada trabajo que realizan."
                android:textSize="14sp" />


            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Reputación Construida:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/benefit7"
                style="@style/descripcionColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Al ser verificados, los trabajadores pueden construir una reputación sólida y confiable dentro de la comunidad, lo que se traduce en más oportunidades de trabajo y mejores valoraciones de los clientes."
                android:textSize="14sp" />

            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Compromiso con la Calidad:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/benefit8"
                style="@style/descripcionColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Los trabajadores verificados se comprometen a mantener un alto nivel de calidad en sus servicios, ofreciendo soluciones efectivas y satisfactorias para sus clientes."
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>