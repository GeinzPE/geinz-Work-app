<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".problemas_soporte_politicas.politicas_creacion_cuenta">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/TextoTitulos"
                android:id="@+id/privacy_policy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="@string/privacy_policy_title"/>

            <TextView
                style="@style/descripcionColor"
                android:id="@+id/privacy_policy_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="@string/privacy_policy_intro"/>

            <TextView
                style="@style/descripcionColor"
                android:id="@+id/privacy_policy_information_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="@string/privacy_policy_information_collected"/>

            <TextView
                style="@style/descripcionColor"
                android:id="@+id/privacy_policy_use_of_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="@string/privacy_policy_use_of_information"/>

            <TextView
                style="@style/descripcionColor"
                android:id="@+id/privacy_policy_data_protection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="@string/privacy_policy_data_protection"/>

            <TextView
                style="@style/descripcionColor"
                android:id="@+id/privacy_policy_worker_guidelines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="@string/privacy_policy_worker_guidelines"/>

            <TextView
                style="@style/descripcionColor"
                android:id="@+id/privacy_policy_user_rights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="@string/privacy_policy_user_rights"/>

            <TextView
                style="@style/descripcionColor"
                android:id="@+id/privacy_policy_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="@string/privacy_policy_changes"/>

            <TextView
                style="@style/descripcionColor"
                android:id="@+id/privacy_policy_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="@string/privacy_policy_contact"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
