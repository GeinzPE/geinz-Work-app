<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fondo"
    tools:context=".FuncionalidadGeinz.Noticias_Info">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Noticias"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                style="@style/descripcionColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="En el apartado de noticias de la aplicación Geinz Work, podrás encontrar
las actualizaciones más recientes relacionadas con nuestra plataforma,
así como noticias sobre promociones y ofertas especiales. Esta sección
está diseñada para mantenerte informado y ayudarte a aprovechar al
máximo los servicios y descuentos disponibles."
                android:textSize="13sp" />

            <TextView
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Características del Apartado de Noticias:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Noticias Recientes de la Aplicación:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                style="@style/descripcionColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text=" Mantente al día con las últimas novedades y actualizaciones de Geinz Work. Aquí encontrarás información sobre nuevas funcionalidades,mejoras y eventos importantes."
                android:textSize="13sp" />


            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Promociones y Ofertas Especiales:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                style="@style/descripcionColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Accede a noticias sobre las promociones y ofertas especiales que ofrecemos en colaboración con nuestros socios. Aprovecha descuentos exclusivos y promociones limitadas para obtener el mejor valor en los servicios que necesitas."
                android:textSize="13sp" />

        </LinearLayout>
    </ScrollView>
    <TextView
        style="@style/TextoModoOScuroColor"
        android:id="@+id/siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Siguiente >"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>