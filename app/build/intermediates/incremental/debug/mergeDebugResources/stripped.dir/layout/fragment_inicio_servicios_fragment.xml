<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fondo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".servicios_geinz.inicio_servicios_fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Servicios geinz"
                android:textSize="30sp" />

            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Haz que tu marca brille con Geinz Work! Publica anuncios o noticias y conecta directamente con los usuarios. Tienes dos opciones: coloca un anuncio en la sección de publicidad o un atractivo banner en la sección de noticias. ¡Aprovecha esta oportunidad y haz que todos vean lo mejor de tu negocio! Con un solo clic, los usuarios podrán contactarte directamente."
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>

            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                android:id="@+id/carrusel_publicidad_baner"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="16dp"
                app:autoWidthFixing="false"
                app:carouselGravity="START"
                app:carouselType="SHOWCASE"
                app:imageScaleType="centerCrop"
                app:infiniteCarousel="false"
                app:scaleOnScroll="false"
                app:showBottomShadow="false"
                app:showCaption="false"
                app:showIndicator="false"
                app:showNavigationButtons="false"
                app:showTopShadow="false" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/uni_sans"
                    android:text="¡Prueba Geinz Tienda Gratis por un Mes!"
                    android:textSize="15sp" />

                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="¿Tienes un Negocio y quieres llegar a más clientes?
¡No pierdas esta oportunidad!
Con Geinz Tienda, puedes mostrar tus productos y
atraer nuevos compradores sin ningún costo durante los primeros 30 días."
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/uni_sans"
                    android:text="Te ofrecemos:"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Publica y promociona tus productos fácilmente"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Llega a usuarios interesados."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Implementación las promociones y descuentos de tu negocio"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Facilidad de reserva en categorías."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Fácil acceso para que los usuarios puedan encontrarte."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Organiza tus productos por la categoría que gustes."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/uni_sans"
                    android:text="Llega a muchos lugares"
                    android:textSize="15sp" />


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Tu Negocio en Geinz será visible para usuarios de diferentes lugares, incluyendo por ahora Paramonga, Supe, Pativilca y Barranca. No importa dónde esté tu negocio, cualquier usuario podrá verla y acceder a tus productos, ampliando tu alcance y potencial de ventas."
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/uni_sans"
                    android:text="Cómo empezar:"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Completa el formulario de registro con los datos de tu tienda."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=". Configura tu tienda: Sube tus productos, agrega descripciones y clasifícalos en categorías."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Lanza tu tienda: Publica tu tienda y empieza a atraer clientes."
                        android:textSize="10sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/anton_regular"
                    android:text="Regístrate ahora y aprovecha un mes
 gratis de Geinz !"
                    android:textAllCaps="true"
                    android:textSize="20sp" />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mandarSolicitud"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Mandar Solicitud"
                    app:icon="@drawable/carta_icon"
                    app:iconGravity="textEnd"
                    style="@style/RoundedButton"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>