<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    style="@style/fondo"
    android:layout_height="match_parent"
    tools:context=".passwordYuser">


    <TextView
        android:id="@+id/geinz"
        style="@style/TextoTitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/geinz"
        android:textSize="90sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/freelancer"
        style="@style/TextoTitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geinz"
        android:layout_marginLeft="10dp"
        android:text="@string/freelancer"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CreatCuenta"
        style="@style/TextoTitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freelancer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/CreatCuenta"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Estas_Pasos"
        style="@style/TextoTitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CreatCuenta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="@string/Estas_Pasos"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Estas_Pasos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/int_correo"
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <EditText
                style="@style/TextoModoOScuroColor"
                android:id="@+id/correo_electronicoFree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/correo_electronicoFree"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/int_contra"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:passwordToggleEnabled="true">

            <EditText
                style="@style/TextoModoOScuroColor"
                android:id="@+id/ContraFree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/ContraseÃ±a_Free"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/int_repetirContrafree"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:passwordToggleEnabled="true">

            <EditText
                style="@style/TextoModoOScuroColor"
                android:id="@+id/repetircontraFree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/repetircontra_free"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_login"
            android:text="@string/btnCrear_cuenta"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>


</RelativeLayout>