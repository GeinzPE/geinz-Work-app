<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagen_trabajo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sin_foto_portada_con_marca"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/mascara_servicios_ofertas_etc" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lineal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagen_trabajo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                style="@style/TextoModoOScuroColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="3"
                android:text="Titulo publicacion"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvReadMoreTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leer más"
                android:textColor="#027EB5"
                android:textSize="10sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contenido"
                style="@style/descripcionColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="contenido"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvReadMoreContenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leer más"
                android:textColor="#027EB5"
                android:textSize="10sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>


        <TextView
            android:id="@+id/hora"
            style="@style/descripcionColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:text="fecha"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/fecha"
            style="@style/descripcionColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:text="hora"
            android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>