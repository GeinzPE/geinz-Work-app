<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fondo"
    tools:context=".Crea_tu_publicidad">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:text="GEINZ"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CREA-DISEÑA-CRECE"
                style="@style/TextoTitulos"
                android:textSize="15sp"
                android:textStyle="bold" />

            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                android:id="@+id/carrusel_publicidad_baner"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="16dp"
                app:autoWidthFixing="false"
                app:carouselGravity="START"
                app:carouselType="SHOWCASE"
                app:imageScaleType="centerCrop"
                app:infiniteCarousel="false"
                app:scaleOnScroll="false"
                app:showBottomShadow="false"
                app:showCaption="false"
                app:showIndicator="false"
                app:showNavigationButtons="false"
                app:showTopShadow="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Crea tu Publicidad:"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos"/>

                <TextView
                    android:textSize="12sp"
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En Geinz, ofrecemos la oportunidad de impulsar tu marca,
negocio u ofertas a través de publicidad para tu negocio,
efectivas y personalizadas. Nuestro proceso simple y
transparente te permite elegir el plan que mejor se
adapte a tus necesidades y comenzar a destacar en
el mundo digital." />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Paso 1: Elige tu Plan"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos" />

                <TextView
                    android:textSize="12sp"
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".Plan Básico: Destaca tu oferta especial o promoción por un período determinado." />

                <TextView
                    android:textSize="12sp"
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Plan Avanzado: Amplía la visibilidad de tu marca a través de un banner más destacado y tiempo prolongado." />

                <TextView
                    android:textSize="12sp"
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=".Plan Premium: Obtén la máxima exposición con un banner premium exclusivo y análisis detallado de rendimiento." />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Paso 2: Completa tus Datos"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    style="@style/descripcionColor"
                    android:text="Proporciona la información necesaria sobre tu empresa y la
promoción que deseas destacar en nuestro banner principal." />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Datos del anuncio"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Nombre de tu tienda o empresa"
                    android:textSize="12sp"
                    style="@style/descripcionColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Foto de la publicación"
                    android:textSize="12sp"
                    style="@style/descripcionColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Ubicación del local "
                    android:textSize="12sp"
                    style="@style/descripcionColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Titulo de la publicación"
                    android:textSize="12sp"
                    style="@style/descripcionColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Numero de contacto"
                    android:textSize="12sp"
                    style="@style/descripcionColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Descripción del anuncio "
                    android:textSize="12sp"
                    style="@style/descripcionColor"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Datos del Usuario"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Nombres completos"
                    android:textSize="12sp"
                    style="@style/descripcionColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. DNI"
                    android:textSize="12sp"
                    style="@style/descripcionColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Numero de contacto"
                    android:textSize="12sp"
                    style="@style/descripcionColor"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Paso 3: Revisión y Aprobación"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuestro equipo revisará y preparará el banner de publicidad
según tus especificaciones para tu aprobación final."
                    android:textSize="12sp"
                    style="@style/descripcionColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Paso 4:  Lanzamiento del Banner"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Una vez aprobado, tu banner publicitario estará activo en
nuestro banner principal, llegando a nuestra audiencia y
potenciando tu presencia en línea."
                    android:textSize="12sp"
                    style="@style/descripcionColor"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Política de privacidad y seguridad:"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En Geinz, la protección de tus datos es nuestra prioridad.
Utilizamos medidas de seguridad avanzadas para garantizar
la confidencialidad y seguridad de la información que nos
proporcionas durante el proceso de creación de publicidad.
Todos los datos son tratados de manera confidencial y se
almacenan de acuerdo con las normativas de protección de
datos vigentes. Además, nuestro equipo está capacitado
para manejar tus datos de forma segura y solo se utilizarán
para los fines específicos de tu publicidad en nuestra plataforma"
                    android:textSize="12sp"
                    style="@style/descripcionColor"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/verPlanes"
                style="@style/RoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:text="ver planes"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                app:icon="@drawable/planes_icon_geinz"
                app:iconGravity="textEnd" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Creador : Benjamin Lopez Abarca"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Desarrollador de software"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    style="@style/TextoTitulos" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>