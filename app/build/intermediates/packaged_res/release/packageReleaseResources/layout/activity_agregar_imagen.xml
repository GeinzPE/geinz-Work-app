<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".agregarImagen">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Agregar Imagenes"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                style="@style/descripcionColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Agrega imágenes para que los demás tengan más confianza en el trabajo que realizas."
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textoImg1"
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Pulsar para agregar imagen 1"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progrsVarimg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen1"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">


                <TextView
                    android:id="@+id/textoImg2"
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Pulsar para agregar imagen 2"
                    android:visibility="gone" />

                <ProgressBar

                    android:id="@+id/progrsVarimg2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textoImg3"
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Pulsar para agregar imagen 3"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progrsVarimg3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen3"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>