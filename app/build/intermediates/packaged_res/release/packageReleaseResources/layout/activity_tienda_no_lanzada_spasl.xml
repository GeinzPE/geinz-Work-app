<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fondo"
    android:orientation="vertical"
    tools:context=".vistaTiendas.tienda_no_lanzada_spasl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Tiendas Geinz"
                android:textSize="30sp" />


            <TextView
                style="@style/TextoModoOScuroColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Actualmente, el apartado de Tiendas Geinz no está disponible en esta versión de la aplicación. Sin embargo, en futuras actualizaciones, todos los usuarios de Geinz podrán disfrutar de esta funcionalidad. Con Tiendas Geinz, podrás descubrir las tiendas de tu localidad, conocer sus horarios, explorar sus productos, adquirir lo que necesitas y realizar reservas cómodamente desde tu dispositivo. ¡Mantente atento a nuestras próximas actualizaciones para disfrutar de esta nueva experiencia!"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/uni_sans"
                    android:text="¡Prueba Geinz Tienda Gratis por un Mes!"
                    android:textSize="15sp" />

                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="¿Tienes un Negocio y quieres llegar a más clientes?
¡No pierdas esta oportunidad!
Con Geinz Tienda, puedes mostrar tus productos y
atraer nuevos compradores sin ningún costo durante los primeros 30 días."
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/uni_sans"
                    android:text="Te ofrecemos:"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Publica y promociona tus productos fácilmente"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Llega a usuarios interesados."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Implementación las promociones y descuentos de tu negocio"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Facilidad de reserva en categorías."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Fácil acceso para que los usuarios puedan encontrarte."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Organiza tus productos por la categoría que gustes."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/uni_sans"
                    android:text="Llega a muchos lugares"
                    android:textSize="15sp" />


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Tu Negocio en Geinz será visible para usuarios de diferentes lugares, incluyendo por ahora Paramonga, Supe, Pativilca y Barranca. No importa dónde esté tu negocio, cualquier usuario podrá verla y acceder a tus productos, ampliando tu alcance y potencial de ventas."
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/uni_sans"
                    android:text="Cómo empezar:"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Completa el formulario de registro con los datos de tu tienda."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=". Configura tu tienda: Sube tus productos, agrega descripciones y clasifícalos en categorías."
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextoModoOScuroColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text=".Lanza tu tienda: Publica tu tienda y empieza a atraer clientes."
                        android:textSize="10sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    style="@style/TextoModoOScuroColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/anton_regular"
                    android:text="Regístrate ahora y aprovecha un mes
 gratis de Geinz !"
                    android:textAllCaps="true"
                    android:textSize="20sp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mandarSolicitud"
                    style="@style/RoundedButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Mandar Solicitud"
                    android:textSize="12sp"
                    app:icon="@drawable/carta_icon"
                    app:iconGravity="textEnd" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>