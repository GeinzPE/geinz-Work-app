<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="10dp">

    <!-- Imagen principal -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_trabajo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/qr_yape"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/mascara_round" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roun_prop_anuncio">

        <TextView
            android:id="@+id/nombeTienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="nombre tienda"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/descuentoPorcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/roun_off_descuento"
        android:padding="5dp"
        android:text="@string/cat"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roun_prop_anuncio">

        <TextView
            android:id="@+id/fechaVencimineto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="Vencimineto"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </RelativeLayout>
</RelativeLayout>
