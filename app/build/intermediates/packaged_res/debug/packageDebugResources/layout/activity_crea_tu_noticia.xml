<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.geinzwork.crea_tu_noticia">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:text="GEINZ"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CREA-DISEÑA-CRECE"
                android:textSize="15sp"
                android:textStyle="bold" />

            <include
                android:id="@+id/itemnAnuncios"
                layout="@layout/item_anuncios" />

            <TextView
                android:layout_margin="10dp"
                style="@style/TextoTitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="¿Cómo funciona?"
                android:textSize="27sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextoTitulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Crea tu noticia"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Define el mensaje que quieres comunicar. Comienza ingresando un título claro y atractivo que resuma la esencia de tu noticia. Agrega una descripción detallada para explicar el contenido, y no olvides incluir enlaces relevantes, como tu sitio web, redes sociales o cualquier página externa que pueda proporcionar más información a los usuarios."
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextoTitulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Personalízala"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haz que tu noticia destaque entre las demás. Sube imágenes de alta calidad que complementen tu contenido y selecciona las categorías que mejor representen el tema de tu publicación. Esto asegurará que llegue al público correcto. Además, puedes ajustar el formato para que el diseño sea coherente con tu estilo y objetivos."
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextoTitulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Publica y comparte"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/descripcionColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuando estés listo, haz tu noticia visible para todos tus seguidores con un solo clic. Nuestro sistema permite enviar notificaciones personalizadas que garantizan que tu mensaje llegue a quienes les interesa. También puedes aprovechar las herramientas de estadísticas para analizar el impacto de tu publicación y mejorar futuras noticias."
                    android:textSize="12sp" />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/verPlanes"
                style="@style/RoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="ver planes"
                android:textSize="14sp"
                app:icon="@drawable/planes_icon_geinz"
                app:iconGravity="textEnd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextoTitulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Creador : Benjamin Lopez Abarca"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    style="@style/TextoTitulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Desarrollador de software"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>